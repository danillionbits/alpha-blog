<h2 class="center">
	Title: <%= @article.title %>
</h2>


<div class="card bg-light mb-3 col-sm-8 offset-sm-2">
	<h4 class="center"><strong>Description:</strong></h4>
	<hr/>
	<%= simple_format(@article.description) %>
	<hr/>
	<div class="article-actions">
		<%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary btn-sm" %>
		<%= link_to "Delete this article", article_path(@article), 
																			 method: :delete, 
																			 data: { confirm: "Are you sure you want to delete this article?"}, 
																			 class: "btn btn-danger btn-sm" %>
		<%= link_to "View all articles", articles_path, class: "btn btn-success btn-sm" %>
	</div>
	<br/>
</div>