<div class="row">
	<div class="offset-sm-2 col-sm-8">
		<% flash.each do |name, msg| %>
			<div class='alert alert-<%= "#{name}" %>' role="alert">
				<%= msg %>
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			    <span aria-hidden="true">&times;</span>
			  </button>
			</div>
		<% end %>
	</div>
</div>