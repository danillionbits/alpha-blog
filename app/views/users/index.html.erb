<h1 class="center"> All Alpha Bloggers</h1>
<br/>


<% if @users.count > 5 %>
	<div class="d-flex justify-content-center">
		<%= will_paginate(@things, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
	</div>
	<br/>
<% end %>

<div class="center">
	<% @users.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="offset-md-4 col-md-4 card bg-light">
					<li><%= link_to gravatar_for(user), user_path(user) %> </li>
					<li class="article-title">
						<%= link_to user.username, user_path(user) %>
					</li>
					<li><small>
						<%= pluralize(user.articles.count, "article") %>
					</small></li>
					
					
					<% if logged_in? && current_user.admin? %>
						<div class="article-actions">
							<%= link_to "Delete this user", user_path(user), method: :delete, 
							data: {confirm: "Are you sure you want to delete the user and all their articles?"}, class: "btn btn-danger btn-sm" %> 
						</div>
					<% end %>
				</div>
			</div>
		</ul>
	<% end %>
</div>
<br/>

