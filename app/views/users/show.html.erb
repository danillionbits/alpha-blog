<h1 class="center">Welcome to <%= @user.username %>'s page </h1>

<div class="row">
	<div class="offset-md-4 col-md-4 center">
		<%= gravatar_for @user, size: 150 %>
	</div>
</div>
<br/>
<h4 class="center"><%= @user.username %>'s articles</h4>
<br/>

<% if @user_articles.count > 5 %>
	<div class="d-flex justify-content-center">
		<%= will_paginate(@things, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
	</div>
	<br/>
<% end %>


<%= render 'articles/article', obj: @user_articles %>
